{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "controller": {
            "type": "object",
            "properties": {
                "affinity": {
                    "type": "object"
                },
                "extraEnvVars": {
                    "type": "array"
                },
                "fullnameOverride": {
                    "type": "string"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "imagePullPolicy": {
                    "type": "string"
                },
                "imagePullSecrets": {
                    "type": "array"
                },
                "leaderElection": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "logLevel": {
                    "type": "string"
                },
                "mcpSessionEncryptionSeed": {
                    "type": "string"
                },
                "metricsRequestHeaderAttributes": {
                    "type": "string"
                },
                "metricsRequestHeaderLabels": {
                    "type": "string"
                },
                "mutatingWebhook": {
                    "type": "object",
                    "properties": {
                        "caBundleName": {
                            "type": "string"
                        },
                        "certManager": {
                            "type": "object",
                            "properties": {
                                "certificateName": {
                                    "type": "string"
                                },
                                "enable": {
                                    "type": "boolean"
                                },
                                "issuerName": {
                                    "type": "string"
                                }
                            }
                        },
                        "tlsCertName": {
                            "type": "string"
                        },
                        "tlsCertSecretName": {
                            "type": "string"
                        },
                        "tlsKeyName": {
                            "type": "string"
                        }
                    }
                },
                "nameOverride": {
                    "type": "string"
                },
                "nodeSelector": {
                    "type": "object"
                },
                "podAnnotations": {
                    "type": "object"
                },
                "podEnv": {
                    "type": "object"
                },
                "podSecurityContext": {
                    "type": "object"
                },
                "replicaCount": {
                    "type": "integer"
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "memory": {
                                    "type": "string"
                                }
                            }
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "securityContext": {
                    "type": "object",
                    "properties": {
                        "allowPrivilegeEscalation": {
                            "type": "boolean"
                        },
                        "capabilities": {
                            "type": "object",
                            "properties": {
                                "drop": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "privileged": {
                            "type": "boolean"
                        },
                        "readOnlyRootFilesystem": {
                            "type": "boolean"
                        },
                        "runAsGroup": {
                            "type": "integer"
                        },
                        "runAsNonRoot": {
                            "type": "boolean"
                        },
                        "runAsUser": {
                            "type": "integer"
                        },
                        "seccompProfile": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "ports": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "appProtocol": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "port": {
                                        "type": "integer"
                                    },
                                    "protocol": {
                                        "type": "string"
                                    },
                                    "targetPort": {
                                        "type": "integer"
                                    }
                                }
                            }
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "spanRequestHeaderAttributes": {
                    "type": "string"
                },
                "tolerations": {
                    "type": "array"
                },
                "volumes": {
                    "type": "array"
                },
                "watch": {
                    "type": "object",
                    "properties": {
                        "cacheSyncTimeout": {
                            "type": "string"
                        },
                        "namespaces": {
                            "type": "array"
                        }
                    }
                }
            }
        },
        "endpointConfig": {
            "type": "object",
            "properties": {
                "rootPrefix": {
                    "type": "string"
                }
            }
        },
        "envoyGateway": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string"
                }
            }
        },
        "extProc": {
            "type": "object",
            "properties": {
                "extraEnvVars": {
                    "type": "array"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "imagePullPolicy": {
                    "type": "string"
                },
                "imagePullSecrets": {
                    "type": "array"
                },
                "logLevel": {
                    "type": "string"
                }
            }
        }
    }
}
